{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "ES6",
    "strict": true,
    "declaration": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "removeComments": true,
    "rootDir": "src",
    "outDir": "lib"
  },
  "include": ["src/**/*" , "test/**/*" ],
  "exclude": ["node_modules", "docs/**/*"]
}